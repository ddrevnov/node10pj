extends layout

block content
  if posts
  each post, i in posts
    h1
      a(href=`/posts/show/${post._id}`)= post.title
    p.meta Posted in
      a(href=`/categories/show/${post.category}`) #{post.category} by #{post.author} on #{moment(post.date).format('DD-MM-YYYY')}
    img(src=`/img/uploads/${post.mainimage}`)
    p!= post.body
    a.btn.btn-default(href=`/posts/show/${post._id}`) Read more
  else
    p.well There are no posts to display